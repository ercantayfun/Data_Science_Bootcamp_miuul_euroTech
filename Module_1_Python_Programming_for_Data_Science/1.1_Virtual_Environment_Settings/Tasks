########################################################################################################################################
"Task 1: Create a virtual environment with your own name, perform python 3 installation during creation."
conda create -n Ercan3
########################################################################################################################################



########################################################################################################################################
"Task 2: Activate the environment you created."
conda activate Ercan
########################################################################################################################################



########################################################################################################################################
"Task 3: List installed packages."
conda list
########################################################################################################################################



########################################################################################################################################
"Task 4: Download the latest version of Numpy and version 1.2.1 of Pandas simultaneously into the environment."
conda install numpy Pandas=1.2.1
########################################################################################################################################



########################################################################################################################################
"Task 5: What is the version of the downloaded Numpy?"
conda list    (((numpy-base-1.24.3)))
########################################################################################################################################



########################################################################################################################################
"Task 6: Upgrade Pandas. What is the new version?"
conda upgrade Pandas
conda list
#((("pandas-1.5.3 ")))
########################################################################################################################################




########################################################################################################################################
"Task 7: Remove Numpy from the environment."
conda remove numpy
########################################################################################################################################




########################################################################################################################################
"Task 8: Download the latest versions of Seaborn and Matplotlib libraries simultaneously."
install seaborn matplotlib
########################################################################################################################################




########################################################################################################################################
"Task 9: Export the libraries inside the virtual environment with version information and examine the yaml file."
conda env export > 29_yaml.yaml
########################################################################################################################################




########################################################################################################################################
"Task 10: Delete the environment you created. First deactivate the environment."
conda deactivate
conda env remove -n Ercan
########################################################################################################################################
